@page
@model IndexModel
@{
    ViewData["Title"] = "Simple Calculation App";
}

<div class="text-center">

    @*if there is an error or if we have a result =>*@
    @if(Model.HasData && Model.IsError)
    {
        <h2>Error: @Model.message</h2>
    }

    @if(Model.HasData && !Model.IsError)
    {
        <h3> => Result: @Model.result </h3>
    }

    <div class="container" style="margin-top: 25px">
        <form method="POST">
            <label for="number1">Number 1:</label>
            <input type="text" id="num1" name="number1"><br /><br />

            <label for="number1">Number 2:</label>
            <input type="text" id="num1" name="number2"><br /> <br />

            <label for="number1">Select Operation:</label>
            <select name="operation" asp-items="Model.Options"></select> <br/><br/>

            <input type="submit" value="Calculate">
        </form>
    </div>


</div>
